<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Liste des réclamations</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5;
        background-color: #0f76fd;
        margin: 0;
        padding: 0;
      }

      h1 {
    font-size: 24px;
    text-align: center;
    margin-top: 20px;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    margin-bottom: 20px;
  }
  
  th, td {
    border: 1px solid #2c0101;
    padding: 8px;
    text-align: center;
  }
  
  th {
    font-weight: bold;
  }
  
  tbody tr:nth-child(even) {
    background-color: #ff7300;
  }
  
  tbody tr:nth-child(odd) {
    background-color: #ffab5c;
  }
  
  tbody td:nth-child(6) {
    color: #008000;
  }
  
  tbody td:nth-child(7) {
    font-style: italic;
  }
</style>

</head>
<body>
  <h1>Liste des réclamations</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Sujet</th>
        <th>Message</th>
        <th>Statut</th>
        <th>Date de création</th>
      </tr>
    </thead>
    <tbody>
      <% claims.forEach(function(claim) { %>
        <tr>
          <td><%= claim.id %></td>
          <td><%= claim.name %></td>
          <td><%= claim.email %></td>
          <td><%= claim.subject %></td>
          <td><%= claim.message %></td>
          <td><a href="/"><button>Visit home</button></a><%= claim.status %></td>
          <td><%= claim.created_at %></td>
          
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>